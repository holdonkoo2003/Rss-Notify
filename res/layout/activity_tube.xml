<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/bakerloo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bakerloo" 
                android:background="@color/bakerloo"/>

            <TextView
                android:id="@+id/baker_stat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/central"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/central" 
                android:background="@color/central"
                />

            <TextView
                android:id="@+id/central_stat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/circle"                 
                android:background="@color/circle"/>


            <TextView
                android:id="@+id/circle_stat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/district"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/district"
                android:background="@color/district" />

            <TextView
                android:id="@+id/district_stat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/dlr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dlr"
                android:background="@color/dlr" />

            <TextView
                android:id="@+id/dlr_stat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/hammersmith"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hammersmith"
                android:background="@color/hammersmith" />

            <TextView
                android:id="@+id/hammer_stat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/jubilee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/jubilee"
                android:background="@color/jubilee" />

            <TextView
                android:id="@+id/jubilee_stat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/metro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/metropolitan"
                android:background="@color/metropolitan" />

            <TextView
                android:id="@+id/metro_stat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/northern"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/northern"
                android:background="@color/northern"
                android:textColor="@color/status" />

            <TextView
                android:id="@+id/north_stat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/overground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/overground"
                android:background="@color/overground" />

            <TextView
                android:id="@+id/over_stat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/piccadily"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/piccadily"
                android:background="@color/piccadily" />

            <TextView
                android:id="@+id/piccadily_stat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/victoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/victoria"
                android:background="@color/victoria"/>

            <TextView
                android:id="@+id/victoria_stat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/waterloo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/waterloo"
                android:background="@color/waterloo" />

            <TextView
                android:id="@+id/water_stat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status" />

        </LinearLayout>
             
    </LinearLayout>
    
</RelativeLayout>